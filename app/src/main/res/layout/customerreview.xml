<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="@dimen/three_hundred_fifty"
        android:layout_height="@dimen/two_hundred"
        android:layout_marginLeft="@dimen/ten"
        android:layout_marginTop="@dimen/twenty"
        android:layout_marginRight="@dimen/five"
        android:layout_marginBottom="@dimen/ten"
        app:cardCornerRadius="@dimen/ten"
        app:cardElevation="@dimen/five">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_back1">

            <de.hdodenhof.circleimageview.CircleImageView

                android:id="@+id/profile_image"
                android:layout_width="@dimen/fifty"
                android:layout_height="@dimen/fifty"
                android:layout_marginStart="@dimen/twenty"
                android:layout_marginTop="@dimen/twenty"
                android:layout_marginEnd="@dimen/twenty"
                android:layout_marginBottom="@dimen/twenty"
                android:src="@drawable/profile" />

            <TextView
                android:id="@+id/text_CustomerNmae"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fifty"
                android:fontFamily="@font/avenir_lt_w01_55_roman"
                android:text="AC Service"
                android:textColor="#000000"
                android:layout_toRightOf="@id/profile_image"
                android:layout_marginTop="@dimen/thirty"
                android:textSize="@dimen/edittextsize">

            </TextView>

            <RelativeLayout
                android:layout_width="@dimen/thirty"
                android:layout_height="@dimen/twenty"
                android:background="@drawable/statues_bg"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/ten">

                <ImageView
                    android:id="@+id/star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_star"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/two">

                </ImageView>

                <TextView
                    android:id="@+id/text_Reating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir_lt_w01_55_roman"
                    android:textColor="#FFFFFF"
                    android:text="5"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/star"
                    android:layout_marginLeft="@dimen/two"
                    android:textSize="@dimen/textsize">

                </TextView>
            </RelativeLayout>



            <TextView
                android:id="@+id/text_Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fifty"
                android:fontFamily="@font/avenirlt35light"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard"
                android:textColor="#000000"
                android:lineSpacingExtra="5dp"
                android:layout_below="@id/profile_image"
                android:textSize="@dimen/edittextsize"
                android:layout_centerHorizontal="true">

            </TextView>



        </RelativeLayout>



    </androidx.cardview.widget.CardView>


</RelativeLayout>