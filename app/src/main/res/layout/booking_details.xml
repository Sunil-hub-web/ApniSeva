<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fifteen"
        android:layout_marginTop="@dimen/twenty"
        android:layout_marginRight="@dimen/fifteen"
        android:layout_marginBottom="@dimen/ten"
        app:cardCornerRadius="@dimen/ten"
        app:cardElevation="@dimen/five">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fifteen">

                <TextView
                    android:layout_weight="0.3"
                    android:id="@+id/text_Booking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fifteen"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Booking ID :"
                    android:textColor="#252424"
                    android:textSize="@dimen/textsize">

                </TextView>

                <TextView
                    android:layout_weight="1.5"
                    android:id="@+id/text_bookingStatues"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/ten"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Paid"
                    android:gravity="end"
                    android:textColor="#3BB54A"
                    android:textSize="@dimen/textsize">

                </TextView>

            </LinearLayout>

            <TextView
                android:id="@+id/text_BookingId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fifteen"
                android:fontFamily="@font/montserrat_semibold"
                android:text="AC Service"
                android:textColor="#717070"
                android:layout_marginTop="@dimen/five"
                android:textSize="@dimen/textsize">

            </TextView>


            <TextView
                android:id="@+id/text_Services"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fifteen"
                android:fontFamily="@font/montserrat_semibold"
                android:text="AC Service"
                android:textColor="#000000"
                android:layout_marginTop="@dimen/twenty"
                android:textSize="@dimen/edittextsize">

            </TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fifteen">

                <TextView
                    android:id="@+id/text_ProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fifteen"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Split AC services"
                    android:textColor="#717070"
                    android:textSize="@dimen/edittextsize">

                </TextView>

                <TextView
                    android:id="@+id/text_Symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_toLeftOf="@id/text_Price"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Rs"
                    android:textColor="#717070"
                    android:textSize="@dimen/textsize">

                </TextView>

                <TextView
                    android:id="@+id/text_Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginRight="@dimen/twenty"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="599.00"
                    android:textColor="#717070"
                    android:textSize="@dimen/textsize">

                </TextView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten">

                <TextView
                    android:id="@+id/text_ProductName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fifteen"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Split AC services"
                    android:textColor="#717070"
                    android:textSize="@dimen/edittextsize">

                </TextView>

                <TextView
                    android:id="@+id/text_Symbol1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_toLeftOf="@id/text_Price1"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Rs"
                    android:textColor="#717070"
                    android:textSize="@dimen/textsize">

                </TextView>

                <TextView
                    android:id="@+id/text_Price1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginRight="@dimen/twenty"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="599.00"
                    android:textColor="#717070"
                    android:textSize="@dimen/textsize">

                </TextView>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/twenty_five">
<!--
                <Button
                    android:id="@+id/btn_Rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/fifteen"
                    android:background="#FFFFFF"
                    android:text="Rate"
                    android:textSize="@dimen/textsize"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_medium">

                </Button>-->

                <Button
                    android:id="@+id/btn_Reorder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/fifteen"
                    android:background="#152E88"
                    android:text="booking details"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/textsize"
                    android:fontFamily="@font/montserrat_medium">

                </Button>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>