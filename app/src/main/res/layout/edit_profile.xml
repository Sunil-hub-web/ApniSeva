                            android:text="Ms."
                            android:textColor="@color/black"
                            android:textSize="@dimen/twelve_size"
                            android:textStyle="bold"></TextView>

                    </RelativeLayout>-->

                    <EditText
                        android:id="@+id/edit_userName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ten"
                        android:layout_marginTop="@dimen/eight"
                        android:layout_toRightOf="@id/rel"
                        android:background="@color/transparent"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="left"
                        android:text="XXXXXXX"
                        android:textColor="@color/black">

                    </EditText>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/fifteen"
                    android:background="@color/text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/ten"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Email Address"
                    android:textColor="#000000"
                    android:textSize="@dimen/edittextsize"></TextView>


                <EditText
                    android:id="@+id/edit_EmailId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/twelve"
                    android:layout_toRightOf="@id/rel"
                    android:background="@color/transparent"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="left"
                    android:text="XXXXX@XX.com"
                    android:textColor="@color/black"
                    android:textStyle="bold">

                </EditText>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/fifteen"
                    android:background="@color/text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/fifteen"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="phone number"
                    android:textColor="#000000"
                    android:textSize="@dimen/edittextsize"></TextView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fifteen">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ten"
                        android:layout_marginTop="@dimen/six"
                        android:src="@drawable/flag">


                    </ImageView>

                    <TextView
                        android:id="@+id/code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ten"
                        android:layout_toRightOf="@id/image"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="+91"
                        android:textColor="#000000"
                        android:textSize="@dimen/edittextsize"></TextView>

                    <EditText
                        android:id="@+id/edit_MobileNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ten"
                        android:layout_marginBottom="@dimen/ten"
                        android:layout_toRightOf="@+id/code"
                        android:background="@color/transparent"
                        android:drawablePadding="@dimen/twenty"
                        android:fontFamily="@font/montserrat_medium"
                        android:inputType="number"
                        android:maxLength="10"
                        android:text="00000000"
                        android:textColor="@color/black"
                        android:textStyle="bold">

                    </EditText>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/ten"
                    android:background="@color/text" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_Update"
                android:layout_width="match_parent"
                android:layout_height="@dimen/forty_five"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/fifty"
                android:background="@drawable/loginback"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Update"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/edittextsize"
                android:textStyle="bold"></Button>

        </LinearLayout>

    </ScrollView>





</RelativeLayout>