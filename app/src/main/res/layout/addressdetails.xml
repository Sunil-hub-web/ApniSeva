<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="@dimen/three_hundred"
        android:layout_height="@dimen/hundred_fifty"
        android:layout_marginLeft="@dimen/ten"
        android:layout_marginTop="@dimen/twenty"
        android:layout_marginRight="@dimen/fifteen"
        app:cardCornerRadius="@dimen/ten"
        app:cardElevation="@dimen/five"
        android:layout_marginBottom="@dimen/ten">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="Shaileshree vihar home"
                android:textColor="#000000"
                android:textSize="@dimen/eighteen"
                android:textStyle="bold">

            </TextView>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:layout_marginTop="@dimen/ten"
                android:text="Plot no - 126, Jaganath Temple"
                android:textColor="#676767"
                android:textSize="@dimen/fifteen"
                android:textStyle="bold">

            </TextView>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="lane, Sailshree vihar,"
                android:textColor="#676767"
                android:textSize="@dimen/fifteen"
                android:textStyle="bold">

            </TextView>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="Bhubaneswar"
                android:textColor="#676767"
                android:textSize="@dimen/fifteen"
                android:textStyle="bold">

            </TextView>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>