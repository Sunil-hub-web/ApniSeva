<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LocationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Hii, nice to meet you !"
            android:textColor="#979393"
            android:textSize="@dimen/edittextsize"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="See services around"
            android:textColor="#070707"
            android:textSize="@dimen/thirty"
            android:textStyle="bold">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/eighty">

            <Button
                android:id="@+id/btn_Yourlocation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:layout_below="@+id/password"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/thirty"
                android:layout_marginLeft="@dimen/twenty_five"
                android:layout_marginRight="@dimen/twenty_five"
                android:drawableLeft="@drawable/my_location"
                android:background="@drawable/loginback"
                android:paddingLeft="@dimen/seventy"
                android:text="Your Current Location"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_OtherLocation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:layout_below="@+id/password"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:drawablePadding="@dimen/thirty"
                android:layout_marginTop="@dimen/twenty_five"
                android:layout_marginLeft="@dimen/twenty_five"
                android:layout_marginRight="@dimen/twenty_five"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/search"
                android:background="@drawable/locationback"
                android:paddingLeft="@dimen/seventy"
                android:text="Some Other Location"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textStyle="bold"></Button>
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>